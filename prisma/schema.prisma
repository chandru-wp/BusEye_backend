generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String @unique
  password String
  role     Role
}

model Bus {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  busNo     String
  route     String
  latitude  Float?
  longitude Float?
  driverId  String?
  lastUpdated DateTime @updatedAt
}

enum Role {
  ADMIN
  DRIVER
  USER
}
